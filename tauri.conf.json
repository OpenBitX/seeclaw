{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SeeClaw",
  "version": "0.1.0",
  "identifier": "com.seeclaw.app",
  "build": {
    "frontendDist": "src-ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": {
      "script": "yarn dev",
      "cwd": "src-ui"
    },
    "beforeBuildCommand": {
      "script": "yarn build",
      "cwd": "src-ui"
    }
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "SeeClaw",
        "width": 400,
        "height": 720,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
